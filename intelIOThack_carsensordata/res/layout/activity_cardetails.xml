<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f1ac"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
         >

    <Button
        android:id="@+id/HelpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/creditsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/creditsButton"
        android:layout_marginBottom="77dp"
        android:background="#fbe482"
        android:text="Help" />

    <Button
        android:id="@+id/creditsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/HelpButton"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/careButton"
        android:layout_marginBottom="15dp"
        android:background="#fbe482"
        android:text="Diagnostic" />

    <Button
        android:id="@+id/careButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/organiserButtons"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#fbe482"
        android:clickable="true"
        android:text="Care" />

    <Button
        android:id="@+id/organiserButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/careButton"
        android:layout_alignLeft="@+id/logButtons"
        android:layout_alignRight="@+id/logButtons"
        android:layout_marginBottom="22dp"
        android:background="#fbe482"
        android:text="Current Data" />

    <Button
        android:id="@+id/logButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/organiserButtons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:background="#fbe482"
        android:text="Log" />

</RelativeLayout>

   